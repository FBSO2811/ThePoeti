<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">

      <h2><%= @poetry.title %></h2>
      <p> <%= sanitize(@poetry.body, tags: %w(br)) %> </p>
      <br>
      <br>
      <p><i><%= @poetry.author %><i></p>
      <br>
        <%= link_to "Cancella", poetry_path(@poetry),
        method: :delete,
        data: { confirm: "Sei sicuro di voler cancellare la poesia?" } %>
    </div>
  </div>
</div>
