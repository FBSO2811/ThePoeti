<% @title="The Poeti: Poesie di aiutori famosi" %>
<div class="container">
  <div class="poetries-generator">
    <%= link_to "Genera altre poesie famose" , famous_poetries_path, :class => "btn btn-primary"%>
  </div>

  <div class="row">
    <% @poetries.each do | poetry| %>
    <div class="col-xs-12 col-sm-4">
      <% if policy(poetry).show? %>
      <%= link_to poetry_path(poetry) do %>
      <div class="card">
        <div class="card-description">
          <h2> <%=poetry.title=%> </h2>
          <% sanitized_body = sanitize(poetry.body.truncate(170), tags: %w(br)) %></p>
          <p> <%= sanitized_body %></p>
          <div class="card-author-and-icon">
            <div class="card-author">
              <p><i><%=poetry.author=%></i></p>
            </div>
            <div class="card-icon">
              <% if poetry.poster=="Admin"  %>
              <p><i class="fas fa-feather"></i></p>
             <% else %>
             <p><i class="fas fa-palette"></i></p>
             <% end %>
           </div>
         </div>
         <div class="card-born-country">
          <div class="card-born">
            <p><%=poetry.born=%>,</p>
          </div>
          <div class="card-country">
            <p> <%= poetry.country=%></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
  <% end %>
  <!-- </div> -->
</div>
</div>
